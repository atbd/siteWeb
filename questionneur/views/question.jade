extends layout

// ce fichier servira Ã  la fois pour test rapide et exam

block deco
	link(rel='stylesheet', href='/stylesheets/question.css')
	
block js
	script(type='text/javascript', charset='UTF-8', src='/javascripts/gestion_questions.js')
	
block content
	section#principale
	if (url == '/question')
		- var changement = {title:"Test rapide", retour:"Retour menu"}
	else
		- var changement = {title:"Examen officiel", retour:"Abandon examen"}
	h1#title
		= changement.title
	section#question
		fieldset
			h2 
				| Domaine #{question.domain}
			p
				i Question : #{question.text}
			input(type='radio', name='reponse', value='1')
			label(for='1') #{question.answer1}
			br
			input(type='radio', name='reponse', value='2')
			label(for='2') #{question.answer2}
			br
			input(type='radio', name='reponse', value='3')
			label(for='3') #{question.answer3}
			br
			input(type='radio', name='reponse', value='4')
			label(for='4') #{question.answer4}
			br
		a#retour.button(href='/tableauBord')
			= changement.retour
		a#next.button Corriger
	aside
		h2 Statistiques
		p Note courante :
		p#noteCourante
